{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "removeComments": true,
        "lib": ["ESNext", "DOM"],
        "sourceMap": true,
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "common": ["common/src/*"]
        }
    },
    "include": [
        "common/src/**/*",

        "frontend/src/**/*",
        
        "app.ts",
        "backend/src/**/*", 
        "config/src/**/*", 
        "scripts/**/*"
    ],
    "exclude": ["node_modules"]
}